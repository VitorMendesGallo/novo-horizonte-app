{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",  // Garante que a resolução comece na raiz
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@app/*": ["app/*"],
      "@api/*": ["api/*"],
      "@store/*": ["store/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}

